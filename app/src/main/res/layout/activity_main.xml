<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="right"
        android:fontFamily="DS-Digital"
        android:scrollbars="vertical"
        android:text=""
        android:textSize="60dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:fontFamily="DS-Digital"
        android:text="0"
        android:textSize="80dp"
        android:gravity="right"
        />



    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/text2">


        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="BS"
            android:id="@+id/btnbs"
            android:textSize="28dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="CE"
            android:id="@+id/btnce"
            android:layout_toRightOf="@id/btnbs"
            android:textSize="28dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="C"
            android:id="@+id/btnc"
            android:layout_toRightOf="@id/btnce"
            android:textSize="28dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="/"
            android:id="@+id/btndiv"
            android:layout_toRightOf="@id/btnc"
            android:textSize="30dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/l1">


        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="9"
            android:background="#FFFFFF"
            android:id="@+id/btn9"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="8"
            android:background="#FFFFFF"
            android:id="@+id/btn8"
            android:layout_toRightOf="@id/btn9"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="7"
            android:background="#FFFFFF"
            android:id="@+id/btn7"
            android:layout_toRightOf="@id/btn8"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="*"
            android:id="@+id/btnmul"
            android:layout_toRightOf="@id/btn7"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/line2">


        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="6"
            android:background="#FFFFFF"
            android:id="@+id/btn6"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="5"
            android:background="#FFFFFF"
            android:id="@+id/btn5"
            android:layout_toRightOf="@id/btn6"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="4"
            android:background="#FFFFFF"
            android:id="@+id/btn4"
            android:layout_toRightOf="@id/btn5"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="-"
            android:id="@+id/btnsub"
            android:layout_toRightOf="@id/btn4"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/line3">


        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="1"
            android:background="#FFFFFF"
            android:id="@+id/btn1"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="2"
            android:background="#FFFFFF"
            android:id="@+id/btn2"
            android:layout_toRightOf="@id/btn1"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="3"
            android:background="#FFFFFF"
            android:id="@+id/btn3"
            android:layout_toRightOf="@id/btn2"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="+"
            android:id="@+id/btnadd"
            android:layout_toRightOf="@id/btn3"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/line4">


        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="+/-"
            android:id="@+id/btn17"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="0"
            android:id="@+id/btn0"
            android:background="#FFFFFF"
            android:layout_toRightOf="@id/btn17"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="."
            android:id="@+id/btndot"
            android:layout_toRightOf="@id/btn0"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

        <Button
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="="
            android:id="@+id/btneql"
            android:layout_toRightOf="@id/btndot"
            android:textSize="50dp"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp"
            />

    </RelativeLayout>



</RelativeLayout>